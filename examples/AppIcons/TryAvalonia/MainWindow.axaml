		<!-- Default size for all BootstrapIcons in this Window. -->
		<x:Double x:Key="BootstrapIconSize">32</x:Double>
	</Window.Resources>
	<Window.Styles>
		<Style Selector="Button">
			<Setter Property="Background" Value="#EEF5FD"/>
			<Setter Property="MinWidth" Value="70"/>
			<Setter Property="MinHeight" Value="50"/>
		</Style>
		<Style Selector="Button > StackPanel > PathIcon">
			<Setter Property="Width" Value="32"/>
			<Setter Property="Height" Value="32"/>
		</Style>
		<Style Selector="Button > StackPanel > TextBlock">
			<Setter Property="HorizontalAlignment" Value="Center"/>
		</Style>
	</Window.Styles>
	<DockPanel>
		<!-- BootstrapIcons without colors -->
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
			<Button>
				<StackPanel>
					<PathIcon Data="{StaticResource WindowSidebarPath}" />
					<TextBlock Text="Sidebar"/>
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<PathIcon Data="{StaticResource FunnelPath}}" />
					<TextBlock Text="Filter" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<PathIcon Data="{StaticResource SortAlphaDownPath}}" />
					<TextBlock Text="Sort" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<PathIcon Data="{StaticResource FileEarmarkArrowDownPath}}" />
					<TextBlock Text="Export" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<PathIcon Data="{StaticResource FileEarmarkArrowUpPath}}" />
					<TextBlock Text="Import" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<PathIcon Data="{StaticResource FileEarmarkSpreadsheetPath}}" />
					<TextBlock Text="Excel" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<PathIcon Data="{StaticResource GraphUpArrowPath}}" />
					<TextBlock Text="Report" />
				</StackPanel>
			</Button>
		</StackPanel>
		<!-- BootstrapIcons with colors -->
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
			<Button>
				<StackPanel>
					<ui:BootstrapIcon Symbol="WindowSidebar" />
					<TextBlock Text="Sidebar"/>
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<ui:BootstrapIcon Symbol="Funnel" />
					<TextBlock Text="Filter" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<ui:BootstrapIcon Symbol="SortAlphaDown" />
					<TextBlock Text="Sort" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<ui:BootstrapIcon Symbol="FileEarmarkArrowDown" />
					<TextBlock Text="Export" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<ui:BootstrapIcon Symbol="FileEarmarkArrowUp" />
					<TextBlock Text="Import" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<ui:BootstrapIcon Symbol="FileEarmarkSpreadsheet" />
					<TextBlock Text="Excel" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<ui:BootstrapIcon Symbol="GraphUpArrow" />
					<TextBlock Text="Report" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<ui:BootstrapIcon Symbol="Custom1" />
					<TextBlock Text="Custom1" />
				</StackPanel>
			</Button>
			<Button>
				<StackPanel>
					<ui:BootstrapIcon Symbol="Custom2" />
					<TextBlock Text="Custom2" />
				</StackPanel>
			</Button>
		</StackPanel>
		<!---->
		<TextBlock Text="Welcome to Avalonia!" VerticalAlignment="Center" HorizontalAlignment="Center"/>
	</DockPanel>
</Window>
